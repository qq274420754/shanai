<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/empty_view.xml -->
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_backgroudprimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_nolocation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:src="@drawable/common_mascot_ic" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_openlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:autoSizeMaxTextSize="19dp"
            android:autoSizeMinTextSize="14dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="开启附近功能"
            android:textStyle="bold"
            android:textColor="@color/common_textprimary"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_nolocationhint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="50dp"
            android:autoSizeMaxTextSize="16dp"
            android:autoSizeMinTextSize="12dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="需要到手机系统设置中，开启位置权限，\n才可以看到附近的人"
            android:textColor="@color/common_textsecond"
            android:textSize="12sp" />

        <Button
            android:id="@+id/rb_openlocation"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="去开启"
            android:textColor="@color/common_textprimary"
            android:textSize="15sp"
            android:background="@drawable/common_rounded_button" />
    </LinearLayout>

</merge>
